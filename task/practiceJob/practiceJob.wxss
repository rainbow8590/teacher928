@import "../../utils/public.wxss";
@import "../../utils/font.wxss";
@import "../../utils/css/task.wxss";
page{
  height: 100%;
}
.container{
  padding: 0;
  justify-content: flex-start;
  align-items: flex-start;
  overflow-y: scroll;
}

.flex{
  display: flex;
}



.tip{
  font-size: 30rpx;
  line-height: 48rpx;
  color: #939393;
  padding:  0 34rpx 56rpx;
}
.tip1{
  padding-bottom: 42rpx;
}

.title{
  width: 80%;
  font-size: 40rpx;
  margin: 42rpx 30rpx 22rpx 34rpx;
  font-weight: bold;
}

.title1{
  font-size: 30rpx;
  margin-top: 0;
  color: #2da867;
}

.content{
  font-size: 24rpx;
  color: #bbb;
  padding: 0 34rpx 0rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.add{
  font-size:160rpx;
  border:2px solid #bbb;
  width:160rpx;
  height:160rpx;
  text-align:center;
  line-height:130rpx;
  box-sizing: border-box;
}
.pic{
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 38rpx;
  margin-bottom: 38rpx;
  border:1px solid #ccc;

}
.pic image{
  position: absolute;
  left: 0;
  top: 0;
  width:160rpx;
  height:160rpx;
}
.delete{
  position: absolute;
  right: -4px;
  top: -7px;
  font-size: 50rpx;
  color: #616161;
  background: #fff;
  border-radius: 50%;

}
