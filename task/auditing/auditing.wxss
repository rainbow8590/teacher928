.lists{
  width: 100%;
}
.lists .list{
  width: 100%;
  background: #fff;
  box-shadow: 0 0 5px rgba(0,0,0,.1);
  margin-bottom: 20rpx;
}
.lists .list .list-top{
  padding: 0 20rpx;
  width: 100%;
  padding-top: 45rpx;
  padding-bottom: 36rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #32343d;
  text-align: center;
  line-height: 46rpx;
}
.lists .list .list-top .left{
  width: 180rpx;
}
.lists .list .list-top .left .phone{
  color: #f3914c;
}
.lists .list .list-top .center{
  width: 380rpx;
}
.lists .list .list-top .right{
  flex:1;
}
.lists .list .list-top .right .open{
  color: #51b2cd;
}
.lists .list .list-bottom{
  justify-content: flex-end;
  font-size: 26rpx;
  height: 106rpx;
}
.lists .list .list-bottom .time{
  justify-content: flex-end;
  color: #ff4545;
  padding-right: 30rpx;
  line-height: 106rpx;
}
.lists .list .list-bottom .time .auto{
  color: #50b2cd;
}
.lists .list .list-bottom .sure{
  height: 54rpx;
  padding: 10rpx 20rpx;
  line-height: 28rpx;
  border: 1px solid #50b2cd;
  border-radius:40rpx; 
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.lists .list .list-bottom .sure1{
  padding: 10rpx 20rpx;
  border: 1px solid #50b2cd;
  border-radius:40rpx; 
  background: #50b2cd;
  color: #fff;
}

button {
  position:static;
  font-size:26rpx;
  overflow:hidden;
  margin-left: 0;
}

button::after {
  content:none;
}

.yes{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.5);
}
.yes1{
  height: 450rpx;
  bottom:0;
top:auto;

}
.yes .yes-wrap{
  width: 570rpx;
  height: 320rpx;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -285rpx;
  margin-top: -160rpx;
  color: #32343d;
}
.yes .yes-wrap .tip{
  width: 570rpx;
  height: 238rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 1px solid #bbb;
  box-sizing: border-box;
  display: table-cell;
  vertical-align: middle;
}
.yes .yes-wrap .tipwrap{
  width: 100%;
  padding: 0 40rpx;
  display: inline-block;
  box-sizing: border-box;
}
.yes .yes-wrap .btn {
  width: 100%;
  font-size: 26rpx;
  height: 80rpx;
}

.yes .yes-wrap .btn button{
  border: none;
  background: #fff;
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}
.yes .yes-wrap .btn button.off{
  color:#ff4545; 
}
.hidInp{
  width: 0;
  height: 0;
  display: none;
}
.noData{
  font-size: 60rpx;
  text-align: center;
  line-height: 300rpx;
  color: #ccc;
}
.float {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
  z-index: 10000;
 }
 
 .float .floatWrap {
  width: 80%;
  height: 560rpx;
  padding: 0 12rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  margin-top: -280rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
 }
.floatReason .floatWrap{
  height: 300rpx;
  margin-top: -150rpx;
  display: table;
  font-size: 26rpx;
  padding: 0 40rpx;
  line-height: 40rpx;
}
.floatReason .floatWrap view{
  display: table-cell; 
  vertical-align:middle; 
  text-align:center;
}