.wrap .tasksTable{
  width: 100%;
  background: #fff;
  overflow: hidden;
  font-size: 28rpx;
}
.wrap .tasksTable .ttHead{
  position: relative;
  min-height: 20px;
  padding:10px 0;
  line-height: 20px;
  text-align: center;
  z-index: 1000;
  background: #fff;
  border-bottom: 1px solid #95C796;

}
.wrap .tasksTable .ttHead .ttHead-fix{
  position: relative;
  background: #fff;
  z-index:88;
}
.wrap .tasksTable .ttHead .ttHead-scroll{
  width: 999px;
  z-index:77;
  background: #fff;
}
.wrap .tasksTable .ttHead .sName{
  width: 65px;

}
.wrap .tasksTable .ttHead text{
  text-align: center;
  font-size: 28rpx;
}
.wrap .tasksTable .ttHead .ttHead-scroll{
  width: 999px;
  flex-wrap: nowrap;
  position: relative;
}

.wrap .tasksTable .ttHead .ttHead-scroll .task{
  white-space: wrap;
  /*padding: 0 10px;*/
  width: 70px;
}
.wrap .tasksTable .ttHead .ttHead-scroll .time{
  /*padding: 0 15px;*/
  width: 100px;

}
.wrap .tasksTable .ttBody {
  position: relative;
  min-height: 40px;
  padding: 0;
  line-height:40px;
  text-align: center;
  border-bottom-color: #fafafa;
  z-index: 999;
  /*overflow-y:scroll; */
}
.wrap .tasksTable .ttBody .ttHead-fix{
  border-bottom-color: transparent;
}
.wrap .tasksTable .ttBody .ttHead-fix .sName{
  height: 40px;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
}
.wrap .tasksTable .ttBody .ttHead-scroll {
  border-bottom-color: transparent;
}
.wrap .tasksTable .ttBody .ttHead-scroll .scroll-item{
  height: 40px;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
}
.showImg{
  display: block;
  margin: 0 auto;
  padding-bottom: 100px;
}

.btn {
  padding-top: 15px;
  background: #fafafa;
  font-size: 36rpx;
}
.btn .loginBtn{
  width: 80%;
  height: 44px;
  line-height: 44px;
  background: #1fba21;
  color: #fff;
  margin: 0 auto;
  font-size: 36rpx;
}
.hoverLogin{
  background: #009502!important;
}

/*转发*/
.forward{
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -45%;
  width: 90%;
  height: 510rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow:  0 0 10px #ddd;
}
.forward .fClass{
  height: 50%;
  font-size: 48rpx;
  color: #1FB923;
}
.forward .fClass image{
  width: 33rpx;
  height: 47rpx;
  padding-top: 16rpx;
  padding-left: 26rpx;
  text-align: left;
}
.forward .fClass view{
  text-align: center;
}
.forward .fDetail{
  height: 50%;
  padding: 0 56rpx;

  background: #1FB923;
  position: relative;
}
.forward .fDetail .circle{
  position: absolute;
  right: 28rpx;
  top: -22rpx;
  width: 44rpx;
  height: 44rpx;
  background: #fff;
  border-radius: 50%;
}
.forward .fDetail .topIcon{
  border-bottom: 1px dashed #fff;
  padding-bottom: 10rpx;
}
.forward .fDetail .topIcon .iconItem{
  width: 33%;
  padding-top: 38rpx;
  text-align: center;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  font-size: 30rpx;
  color: #fff;
}
.forward .fDetail .topIcon image{
  display: block;
  width: 59rpx;
  height: 43rpx;
  padding-bottom: 10rpx;
  margin: 0 auto;
}
.forward .fDetail .bottomTxt{
  padding-top: 30rpx;
}
.forward .fDetail .bottomTxt view{
  width: 33%; 
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}

