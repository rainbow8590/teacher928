/*主体内容*/
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .classInfo{
  width: 100%;
  height: 45px;
  line-height: 45px;
  padding: 0 30rpx 0 48rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #1fba21;
  background: #fff;
  box-sizing: border-box;
}
.wrap .classInfo .arrow{
  width: 11rpx;
  height: 16rpx;
  padding-right: 10rpx;
}
.wrap .classInfo .menu{
  width: 49rpx;
  height: 28rpx;
  padding: 10px 0 10px 15px;
}
.wrap .choise{
  padding: 16rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #95C796;
  background: #fff;
}
