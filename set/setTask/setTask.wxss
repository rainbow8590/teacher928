.wrap .setTask{
  width: 100%;
}
.wrap .setTask .setTask-title{
  height: 74rpx;
  line-height: 74rpx;
  padding-left: 56rpx;
  font-size: 28rpx;
  color: #7e7e7e;
}

.wrap .setTask .setTask-content{
  height: 116rpx;
  padding: 30rpx 0;
  padding-left: 60rpx;
  line-height: 56rpx;
  border-bottom: 1px solid #E5E5E5;
  font-size: 26rpx;
  background: #fff;
  box-sizing: border-box;
}
.wrap .setTask .setTask-content .write{
  width: 100rpx;
  padding: 0 30rpx;
  margin-left: 14rpx;
  color: #ff8c59;
  text-align: center;
  background: #F2F2F2;
  border-radius: 26rpx;
}
.wrap .setTask .setTask-content .writeDate{
  width: 220rpx;
}

.wrap .tasks{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
}
.wrap .tasks .taskItem{
  height: 80rpx;
  margin-left: 28rpx;
  border-bottom: 1px solid #E5E5E5;
  font-size: 28rpx;
  line-height: 80rpx;
  justify-content: space-between;
}
.wrap .tasks .taskItem .taskItem-left{
  flex: 1;
}
.wrap .tasks .taskItem .dot{
  margin: auto 0;
  margin-left: 25rpx;
  margin-right: 30rpx;
  width: 12rpx;
  height: 12rpx;
  background: #ff8c59;
  border-radius: 50%;
}
.wrap .tasks .taskItem .txt input{
  height: 80rpx;
  line-height: 80rpx;
}
.wrap .tasks .taskItem .radio{
  width: 60rpx;
  margin-right: 44rpx;
}
.wrap .tasks .taskItem .radio image{
  width: 33rpx;
  height: 24rpx;
  display: block;
  margin: 31rpx auto;
}
.wrap .tasks .taskItem .radio1 image{
  width: 36rpx;
  height: 36rpx;
  display: block;
  margin: 31rpx auto;
}
.wrap .tasks .taskAdd{
  color: #888;
}
.wrap .tasks .taskItem .add{
  width: 60rpx;
  margin-right: 44rpx;
}
.wrap .tasks .taskItem .add image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 13rpx auto;
}                                
