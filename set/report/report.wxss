.searchW{
  height: 100%!important;
  border-bottom: none;
}
select{
  margin-bottom: 20rpx;
}
.select1{
  margin-bottom: 0;
}

/*主体内容*/
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.tips{
  padding-left: 40rpx;
}
.noClass{
  font-size: 40rpx;
  text-align: center;
  color: #999;
  line-height: 100rpx;
}

.noReport{
  padding-top: 30rpx;
  box-sizing: border-box;
  padding-left: 40rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color:#da2f1b;
  font-weight: bold;
}
.noReport .tip1{
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}
.report{
  color: #1fba21; 
  font-size: 32rpx;
  line-height: 50rpx;
  background: #fafafa;
}
.report .tip{
  line-height: 80rpx;
}
.report .btn button{
  font-size: 26rpx;
  margin: 0 30rpx;
  border: 1px solid #1fba21;
  color: #1fba21; 
}
.report .btn text{
  font-size: 26rpx;
  padding-right: 10rpx;
}

.sList{
  color: #666;
  font-size: 26rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.sList .sName{
  width: 240rpx;
}
.sList .sStatus{
  flex:1;
}
.sList .sStatus1{
  flex:1;
  color: #da2f1b;
}
.sList .sReport{
  width: 130rpx;
  color: #1fba21;
}


.zoom{
  position: fixed;
  left: 0;
  top: 0;
  width:100%;
  height: 100%;
  background: rgba(0,0,0,.4);
}
.zoom .zoomWrap{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 70%;
  height: 334rpx;
  margin-left: -35%;
  margin-top: -167rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 24rpx;
}
.zoom .zoomWrap .title{
  font-size: 30rpx;
  padding-bottom: 10rpx;
}
