@import "../../utils/font.wxss";
.iconfont{
  font-size: 40rpx;
  color:#888;
}
page{
  height: 100%;
}
.container{
  padding: 0;
}
.wrap{
  width: 100%;
  height: 100%;
  padding-top: 350rpx;
  background: #fafafa;
  box-sizing: border-box;
}
.item{
  display: flex;
  align-items: center;
  width: 100%;
  height: 108rpx;
  padding-left: 84rpx;
  padding-right: 20rpx;
  border-top: 1px solid #E6E6E6;
  border-bottom: 1px solid #E6E6E6;
  background: #fff;
  box-sizing: border-box;
  
}
.item .mail{
  font-size: 26rpx;
  padding-right: 20rpx;
}
.item1 {
  border-top: 0;
}
.item .userIcon{
  width: 40rpx;
  height: 40rpx;
  padding-right: 12rpx;
}
.item .userIcon image{
  width: 40rpx;
  height: 40rpx;
}
.item  .eye{
  display: inline-block;
  padding: 0 20rpx;
  padding-top: 4rpx;
}
.item  .eye .eyeicon{
  font-size: 50rpx;
}
.item input{
  font-size: 30rpx;
  color: #666;
  flex: 1;
}
.item-btns{
  width: 100%;
  padding: 26rpx 0;
  color: #383838;
}
.item-btns radio-group{
  width: 100%;
  display: flex;
  justify-content: center;
}
.item-btns .radio{
  display: block;
  width: 30%;
  text-align: center;
  font-size: 30rpx;
}
.item-btns .radio radio{
  padding-left: 10rpx;
}

.btn{
  padding-top: 200rpx;
}
.btn .loginBtn{
  width: 80%;
  height: 90rpx;
  background: #1fba21;
  color: #fff;
}
.hoverLogin{
  background: #009502!important;
}
.forget{
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #BABABA;
  width: 100%;
  text-align: center;
}
.forget navigator{
  padding: 20rpx 0;
}


.loading image{
  width: 390rpx;
  height: 374rpx;
  padding-top: 100px;
}

