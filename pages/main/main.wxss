@import "../../utils/font.wxss";
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: #fff;
  }
page{
  height: 100%;
}
.main{
  height: 100%;
  /*overflow: hidden;*/
  color: #888;
}

.main .tab{
  position: fixed;
  left:0;
  bottom: 0;
  width: 100%;
  height: 55px;
  border-top: 1px solid #DADADA;
  display: flex;
  background: #fafafa;
}
.main .tab .tabtitle{
  display: flex;
  width: 25%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  box-sizing: border-box;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.main .tab .dot {
  position: absolute;
  right: 60rpx;
  top: 20rpx;
  background: red;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
}
.main .tab .tabtitle .icons{
  display: block;
  height: 48rpx;
  font-size: 40rpx;
}
.main .tab .tabtitle .iconfont{
  
}
.titleActive{
  color: #1fba21;
}
.items{
  width: 100%;
  position: relative;
}


.itemWrap{
  padding-bottom: 144rpx;
}




.itemsWrap{
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.flex{
  display: flex;
  flex-wrap: wrap;
}
 .wrap{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow-y:scroll;

} 
navigate-item{
  width: 50%;
  margin-bottom: 20rpx;
}




#animation{
animation:fadeInDown 1s .2s ease both;
}
@keyframes fadeInDown{
0%{opacity:0;
-webkit-transform:translateY(-20px)}
100%{opacity:1;
-webkit-transform:translateY(0)}
}


.discount{
  width: 100%;
  padding-top: 24rpx;
  padding-bottom: 10rpx;
}
.discount image{
  width: 705rpx;
  height: 138rpx;
}
