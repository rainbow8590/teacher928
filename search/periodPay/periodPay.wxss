.kechoutip{
  padding: 0 20rpx;
  background:#f3914c;
  color: #fff;
  font-size:24rpx;
  line-height:50rpx;
  justify-content: space-between;
}


.choise{
  justify-content: flex-end;
  padding: 10px 0;
}
.checkDate{
  position: relative;
  width: 100%;
  height: 44px;
  padding-top: 19px;
  text-align: center;
  box-sizing: border-box;
}
.checkDateWrap{
  position: relative;
  width: 22%;
  text-align: center;
  margin-left: 39%;
  box-sizing: border-box;
}
.checkDate .date{
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  color: #888;
