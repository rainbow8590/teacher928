  border-bottom-color: transparent;
  width: 0;
  height: 0;
}

.checkDate .rightArrowWrap{
  width:20px;
  height:16px;
  position:absolute;
  right: -36px;
  top:50%;
  margin-top:-10px;
  padding-top:4px;
}
.checkDate .rightArrow{
  border: 12rpx solid #838383;
  border-top-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  width: 0;
  height: 0;
}
.checkDate .bottomArrow{
  border: 10rpx solid #838383;
  border-left-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  width: 0;
  height: 0;
  position: absolute;
  left: 50%;
  top:18px;
  margin-left: -6px;
}

.checkDate .today{
  font-size: 24rpx;
  position: absolute;
  right: 30px;
  top: 50%;
  margin-top: -13px;
  padding: 10px;
  color: #46b52e;
}

