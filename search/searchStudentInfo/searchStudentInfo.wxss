@import "../../utils/public.wxss";
page{
  height: 100%;
  position: relative;
}
.container{
  padding: 0;
  justify-content: flex-start;
  color: #32343d;
  background: #fafafa;
  overflow:hidden;
}
.flex{
  display: flex;
}
.wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .choise {
  padding: 16rpx;
  height: 42px;
  line-height: 42px;
  padding-left: 28rpx;
  box-sizing: border-box;

  background: #fff;
  justify-content: flex-end;
}

.wrap .choise .choiseItem {
  position: relative;
  padding-left: 20rpx;
  padding-right: 50rpx;
  margin-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #eee;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
}

.wrap .choise .choiseItem image {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -8rpx;
  width: 25rpx;
  height: 18rpx;
}

.wrap .noTable {
  overflow: hidden;
  background: #fff;
  font-size: 26px;
  color: #d9d9d9;
  text-align: center;
}
/*搜索条件*/
.searchW{
  width: 100%;
  height: 87px;
  padding-left: 28rpx;
  padding-top: 12px;
  padding-bottom: 18rpx;
  border-bottom: 1px solid #1FB923;
  box-sizing: border-box;
  background: #fff;
}
.searchW .searchI{
  width: 166rpx;
  height: 128rpx;
  line-height: 128rpx;
  margin-right: 20rpx;
  text-align: center;
  color: #1FB923; 
  border: 1px solid #1FB923;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.searchW .active{
  background: #1FB923;
  color: #fff;
}
.searchW .searchIfW{
  flex: 1;
}
.searchW .searchIfW .menu{
  padding: 16rpx 0 37rpx 263rpx;
  height: 28rpx;
}
.searchW .searchIfW .menu image{
  display: block;
  width: 49rpx;
  height: 28rpx; 
}
.searchW .searchIfW .searchIf{
  justify-content: flex-end;
  
}
.searchW .searchIfW .searchIf .searchIf-item{
  position: relative;
  width: 132rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 30rpx;
  border-radius: 26rpx;
  background: #eee;
  font-size: 24rpx;
  margin-right: 6rpx;
}
.searchW .searchIfW .searchIf .searchIf-item image{
  position: absolute;
  right: 17rpx;
  top: 50%;
  margin-top: -5rpx;
  width: 20rpx;
  height: 12rpx;
}
/*搜索结果*/
/*按班级*/
.searchResult{
  width: 100%;
  height: 400px;
  padding-left: 28rpx;
  padding-bottom: 10px;
  box-sizing: border-box;
  background: #fff;
  overflow-y:scroll;

}
.searchResult .resultItem{
  width: 100%;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ddd;
}
.searchResult .resultItem .dot{
  width: 10rpx;
  height: 10rpx;
  background: #b2b8bc;
  border-radius: 50%;
  margin: auto 0;
  margin-left: 10rpx;
  margin-right: 28rpx;
}
.searchResult .resultItem .txt{
  flex:1;
}
/*按人名*/
.searchResult1{
  width: 100%;
  height: 400px;
  /*padding-bottom: 114rpx;*/
  box-sizing: border-box;
  background: #fff;
}
.searchResult1 .itemW{
  overflow-y: scroll;
}
.searchResult1 .searchT{
  width: 100%;
  height: 45px;
  padding: 14rpx 0;
  padding-left: 30rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  border-top: 1px solid #1fba21;
}
.searchResult1 .searchT input{
  width: 180rpx;
  height: 52rpx;
  padding: 0 20rpx;
  border-radius: 26rpx;
  font-size: 26rpx;
  background: #eee;
  margin-right: 30rpx;
}
.searchResult1 .searchT button{
  width: 160rpx;
  height: 52rpx;
  line-height: 52rpx;
  color: #666;
  font-size: 24rpx;
  border:1px solid #1FB923;
  background: #fafafa;
  margin-right: 25px;
}
.searchResult1 .searchT .buttonActive{
  background: #1FB923;
  color: #fff;
}
.searchResult1 .resultItem1{
  width: 100%;
  padding: 0 20rpx;
  height: 40px;
  line-height: 40px;
  font-size: 26rpx;
  text-align: center;
  border-bottom: 1px solid #efefef;
  box-sizing: border-box;
}
.searchResult1 .resultItem1 .sName{
  /*width: 120rpx;*/
  flex:1;
}
.searchResult1 .resultItem1 .sPhone{
  /*width: 200rpx;*/

  flex: 2;
}
.searchResult1 .resultItem1 .sClass{
  flex: 3;
  white-space:nowrap;
}
.tip{
  font-size:32rpx;
  color: #999;
  text-align: center;
  line-height: 200rpx;
}


/*字母搜索*/
.wordsWrap{
  position: fixed;
  right: 0;
  top: 50%;
  margin-top: -220px;
  background: rgba(233,233,233,.4);
  color: #fff;
  font-size: 14px;
  width: 22px;
  padding: 16px 0;
  text-align: center;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  border-radius: 10px;
  z-index: 9999;
}
.wordsWrap .word{
  width: 14px;
  height: 18px;
  line-height: 18px;
  overflow: hidden;
}

.allNum{
  width: 100%;
  height: 40px;
  line-height: 40px;
  background: #f1f1f1;
  text-align: center;
  font-size: 14px;
  color: #bbb;
}
.canvasStyle{
  position: fixed;
  left: 0;
  bottom: 56px;
  z-index: 1000;
  background: red;
}