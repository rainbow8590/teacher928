.wrap .search {
  width: 95%;
  height: 50px;
  font-size: 26rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-bottom: 10px;
  margin: 0 auto;
  color: #696969
}

.wrap .search text {
  padding: 5px 5px;
}

.wrap .noTable {
  overflow: hidden;
  background: #fff;
  font-size: 26px;
  color: #d9d9d9;
  text-align: center;
}
.wrap .table {
  overflow: hidden;
  background: #fff;
  font-size: 13px;
}

.wrap .table .thead {
  position: relative;
  height: 60px;
  line-height: 60px;
  /*border-bottom: 1px solid #1fba21;*/
  text-align: center;
  z-index: 1000;
}

.wrap .table .tbody {
  position: relative;
  overflow: hidden;
  overflow-y: scroll;
  border-bottom-color: transparent;
  z-index: 999;
}

.wrap .table .thead .thead-left {
  position: relative;
  background: #fff;
  z-index: 99;
  width: 160px;
  height: 40px;
  /*border-bottom: 1px solid #1fba21;*/
  /*border-top: 1px solid #1fba21;*/
  box-sizing: border-box;
}

.wrap .table .tbody .thead-left .leftItem {
  border-bottom: 1px solid #f1f1f1;
  line-height: 20px;
  padding: 10px 0;
  height: 60px;
  white-space: nowrap;
  overflow-y: hidden;
  background: #fff;
  box-sizing: border-box;
}

.wrap .table .scrollItem {
  border-bottom: 1px solid #f1f1f1;
  border-right: 1px solid #1fba21;
  margin-right: 6px;
  height: 60px;
  box-sizing: border-box;
}


.wrap .table .thead .thead-right {
  position: relative;
  background: #fff;
  z-index: 88;
}

.wrap .table  .rightWrap {
  position: absolute;
  left: 0;
  top: 0;
  box-sizing: border-box;

}

.wrap .table .thead .twrap {
  position: absolute;
  left: 0;
  top: 0;
}

.wrap .table .sNum {
  width: 50px;
  padding: 0 10px;
  white-space: nowrap;
  overflow: hidden;
}
.wrap .table .sNum .num1{
   padding-top: 20rpx;
   line-height: 20px;
}
.wrap .table .sNum .num2{
  line-height: 20px;
}

.wrap .table .sNum1 {
  width: 60px;
  padding: 0 10px;
  white-space: nowrap;
  overflow: hidden;
}

.wrap .table .sNum2 {
  color: blue;
  text-decoration: underline;
}

.wrap .table .sTime {
  width: 120px;
  line-height: 20px;
  padding: 0 10px;
  overflow: hidden;
  padding-top: 10px;
}
.wrap .table .sAddress {
  width: 120px;
  line-height: 20px;
  padding: 0 10px;
  overflow: hidden;
}

/*折行的样式*/
.wrap .table .sAddress view {
  width: 100%;
  height: 40px;
  line-height: 20px;
  padding-top: 10px;
  white-space: normal;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


/*升班弹窗*/
.upFloat{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.54);
  z-index: 19999;
}
.upFloat .floatWrap{
  position: absolute;
  left: 50%;
  top: 200rpx;
  width: 580rpx;
  padding:10px;
  margin-left: -290rpx;
  border-radius: 5px;
  background: #fff;
  box-sizing: border-box;
}
.upFloat .floatWrap .noShengban{
  padding: 30px;
  font-size: 60px;
  text-align: center;
  color: #999;
}
.upFloat .floatWrap .fItem{
  width: 100%;
  margin:30rpx 0;
  font-size: 22rpx;
 

}
.upFloat .floatWrap .fItem .fItemTop,.upFloat .floatWrap .fItem .fItemBottom{
  width:100%;
  min-height:54rpx;
  border: 1px solid #ddd;
  text-align: center;
  line-height: 54rpx;
  justify-content: space-between;
}
.upFloat .floatWrap .fItem .fItemBottom{
  border-top: none;
}
.upFloat .floatWrap .fItem .fItemTop view{
  border-right: 1px solid #ddd;
}
.upFloat .floatWrap .fItem .fItemBottom view{
  border-right: 1px solid #ddd;
}
.upFloat .floatWrap .fItem .fItemTop .sCode{
  width:160rpx;
}
.upFloat .floatWrap .fItem .fItemTop .sName{
  flex:1;
}
.upFloat .floatWrap .fItem .fItemTop .sTeacher{
  width:130rpx;
  border-right: none;
}
.upFloat .floatWrap .fItem .fItemBottom .sTime{
  flex:1;
}
.upFloat .floatWrap .fItem .fItemBottom .sSchool{
  width:230rpx;
  border-right: none;
}