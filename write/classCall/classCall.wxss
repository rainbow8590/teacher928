@import "../../utils/public.wxss";

page {
  height: 100%;
}

.container {
  position: relative;
  padding: 0;
  height: 100%;
  overflow: hidden;
}

.flex {
  display: flex;
}

.tipShow {
  display: block;
}

.tipHide {
  display: none;
}

/*主体内容*/
.wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .classInfo {
  width: 100%;
  height: 45px;
  line-height: 45px;
  padding: 0 10px 0 10px;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #1fba21;
  background: #fff;
  box-sizing: border-box;
}

.wrap .classInfo image {
  width: 49rpx;
  height: 28rpx;
}

.wrap .choise {
  padding: 16rpx;
  height: 42px;
  line-height: 42px;
  padding-left: 28rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #1fba21;
  background: #fff;
}

.wrap .choise .choiseItem {
  position: relative;
  padding-left: 20rpx;
  padding-right: 50rpx;
  margin-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #eee;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
}

.wrap .choise .choiseItem image {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -8rpx;
  width: 25rpx;
  height: 18rpx;
}

.wrap .tips {
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #fff;
  font-size: 28rpx;
  border-bottom: 1px solid #1fba21;
  justify-content: space-between;
  white-space: nowrap;
}

.wrap .tips .tip {
  margin-right: 20px;
  margin-left: 20px;
  color: blue;
  text-decoration: underline;
}
.wrap .tips .classes {
  margin-right: 10px;
  margin-left: 10px;
  color: #1fba21;
  font-size: 30rpx;
   white-space: nowrap;
}

checkbox .wx-checkbox-input {
  width: 18px;
  height: 18px;
}

.wrap .tab {
  width: 100%;
  overflow: hidden;
  font-size: 28rpx;
  text-align: center;
}

.wrap .tab .tabTitle {
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #1fba21;
  box-sizing: border-box;
}

.wrap .tab .sNum {
  width: 40px;
}

.wrap .tab .sName {
  width: 100px;
}

.wrap .tab .sDuty {
  flex: 1;
  justify-content: center;
}
.wrap .tab .sDuty text{
  margin-right: 20px;
}

.wrap .tab .tabBodyItem {
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #f1f1f1;
}
.wrap .tab .tabBody {
  overflow-y:scroll; 
}

radio {
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-right: 10px;
}
radio .wx-radio-input{
  width: 20px;
  height: 20px;
}
.wrap .tab .btns{
  padding-top: 30px;
  padding-bottom: 30px;
}
.wrap .tab button{
  margin:0 5%;
  width: 40%;
  height: 36px;
  line-height: 36px;
  background: rgba(22, 155, 213, 1);
  color: #fff;
  font-size: 32rpx;
}
.wrap .tab .hidInp{
  width: 0;
  height: 0;
}

/*弹窗*/
.float {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
  z-index: 10000;
 }
.float .content{
  width: 76%;
  height: 200px;
  font-size: 13px;
  position: absolute;
  left: 50%;
  top: 50%;
  line-height: 26px;
  margin-left: -38%;
  margin-top: -100px;
  background: #fff;
  padding: 10px;
  border-radius: 5px;
  box-sizing: border-box;
  
}
.float .content .title{
  text-align: center;
  padding-bottom: 6px;
  font-size: 15px;
  font-weight: bold;
}
.float .content  text{
  color: red;
}