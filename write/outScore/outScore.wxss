@import "../../utils/public.wxss";

page {
  height: 100%;
}

.container {
  padding: 0;
}

.flex {
  display: flex;
}


/*主体内容*/
.wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.score{
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
}


.wrap form {
  display: block;
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}
.title{
  width: 100%;
  line-height: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  color: #1fba21;
  margin-bottom: 30rpx;
}
.title text{
  font-weight: bold;
}
.title button{
  margin: 0 20rpx;
  color: #fff;
}
.questions text{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #1fba21;
  margin: 40rpx 20rpx;
  background: #1fba21;
  color: #fff;
}
.yesBtn{
   background: #1fba21; 
}
.errorBtn{
   background: #9e0e0e; 
}


.btn {
  padding-top: 15px;
  background: #fafafa;
}

.btn .loginBtn {
  width: 80%;
  height: 45px;
  line-height: 45px;
  background: #1fba21;
  color: #fff;
  margin:0 auto;
  font-size:36rpx;
}

.hoverLogin {
  background: #009502 !important;
}

