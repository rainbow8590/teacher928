@import "../../utils/public.wxss";

page {
  height: 100%;
}

.container {
  padding: 0;
}

.flex {
  display: flex;
}


/*主体内容*/
.wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.score{
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
}


.wrap form {
  display: block;
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}
.title{
  width: 100%;
  line-height: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  color: #1fba21;
  padding-bottom:15px;
  padding-top:15px;
}
.title text{
  font-weight: bold;
}
.title button{
  margin: 0 20rpx;
  color: #fff;
}
.questions text{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #1fba21;
  margin: 40rpx 22rpx;
  background: #1fba21;
  color: #fff;
  font-size: 30rpx;
}
.yesBtn{
   height: 52rpx;
   line-height: 52rpx;
   padding: 0 20rpx;
   background: #1fba21; 
}
.errorBtn{
   height: 52rpx;
   line-height: 52rpx;
   padding: 0 20rpx;
   background: #9e0e0e; 
}


.btn {
  padding-top: 15px;
  background: #fafafa;
}

.btn .loginBtn {
  width: 80%;
  height: 45px;
  line-height: 45px;
  background: #1fba21;
  color: #fff;
  margin:0 auto;
  font-size:36rpx;
}

.hoverLogin {
  background: #009502 !important;
}

.questions{
  flex-wrap: wrap;
  justify-content:space-around;

}
.question{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #dcdcdc;
  margin-bottom: 20rpx;
  align-items: center;
  padding-bottom: 10rpx;
  justify-content: space-between;
}
.question input{
  flex:1;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 30rpx;
}

.question button{
  margin-left: 30rpx;
  padding: 0 20rpx;
  line-height: 54rpx;
}
.question .num{
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50%;
  background: #dcdcdc;
  color: #333;
  text-align: center;
}
