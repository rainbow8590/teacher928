@import "../../utils/font.wxss";
page{
  background: #fafafa;
  height: 100%;
}
.container{
  padding: 0;
  color: #666;
}
.flex{
  display: flex;
}
.wrap{
  width: 100%;
}

.search{
  height: 60px;
  border-bottom: 1px solid #b2e7b2;
  background: #fff;
  box-sizing: border-box;
}
.top{
  padding: 26rpx 30rpx;
  color: #4ab430;
  font-size:22rpx;
  justify-content: space-between;
  align-items: center;
}
.top .grade{
  font-size: 30rpx;
  font-weight: bold;
}
.top .info{
  font-size: 28rpx;
  font-weight: bold;
  text-align:right;
}
.top .info .year{
  font-size: 22rpx;
  font-weight: normal;
  color: #888;
}
.top .icon-menus{
  font-size: 47rpx;
}


.list{
  width: 100% ;
  font-size: 26rpx;
  box-sizing: border-box;
}
.list button{
  font-size: 22rpx;
}
.list-title{
  line-height: 82rpx;
  padding-left: 30rpx;
  color: #4ab430;
}
.list-content{
  line-height: 82rpx;
  color: #4ab430;
  background: #fff;
  padding-left: 30rpx;
  box-shadow:0.1px 1px 1px rgba(0,0,0,.05);
}
.list-content .item{
  align-items: center;
  font-size: 26rpx;
  line-height: 88rpx;
  padding: 0 20rpx 0 10rpx;
  border-bottom: 1px solid  #e5e5e5;
  color: #3b3b3b;

}
.list-content .item1{
  border-bottom: none;
}
.list-content .item .icon-arrowback{
  color: #888;
  padding-left: 30rpx;
}
.list-content .item .name{
  flex: 1;
}
.list-content .item .btns{
 font-size: 24rpx;
}
.list-content .item .btns button{
  background: #4ab430;
  color: #fff;
  border-radius: 50rpx;
  margin-left: 20rpx;
  min-width: 136rpx;
  line-height: 50rpx;
  padding: 0 12rpx;
  font-size: 22rpx;
}
.reason{
  color: #50b2cd;
  font-size: 24rpx;
  margin-left: 40rpx;
  text-decoration: underline;
}
.score{
  font-size: 24rpx;
}

.float{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.3);
  z-index:99999;
}
.floatwrap{
  width: 570rpx;
  height: 500rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -285rpx;
  margin-top: -250rpx;
  border-radius: 10rpx;
  /*overflow: hidden;*/
}
.floatwrap1{
  width: 570rpx;
  height: 360rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -285rpx;
  margin-top: -200rpx;
  font-size: 26rpx;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  overflow-y: scroll;
}
.floatwrap button{
  border: none;
  background: #fff;
  width: 50%;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  display: inline-block;
  border-radius: 0;
