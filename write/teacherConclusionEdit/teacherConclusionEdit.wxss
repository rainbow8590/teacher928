.wrap form {
  display: block;
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.wrap form .thead {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #1fba21;
  color: #666;
  margin: 0 20rpx;
}

.wrap form .thead .sNumber {
  width: 100rpx;
  padding-left: 14rpx;
  padding-right: 34rpx;
  text-align: center;
}

.wrap form .thead .sName {
  width: 160rpx;
  padding-left: 14rpx;
  padding-right: 34rpx;
  text-align: center;
}

.wrap form  .sSchool {
  flex: 1;
  text-align: center;
}

.wrap form .tbody {
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  overflow-y: scroll;
}

.wrap form .tbody .tbody-row {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
  color: #666;
  box-sizing: border-box;
}

.wrap form .tbody .tbody-row .hidInp {
  width: 0;
  height: 0;
}

.wrap form .tbody .tbody-row .sNumber {
  width: 100rpx;
  padding-left: 14rpx;
  padding-right: 34rpx;
  text-align: center;
}

.wrap form .tbody .tbody-row .sName {
  width: 160rpx;
  padding-left: 14rpx;
  padding-right: 34rpx;
  text-align: center;
}

