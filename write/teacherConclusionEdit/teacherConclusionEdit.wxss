/*主体内容*/
.wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}


.wrap .choise {
  height: 42px;
  padding: 16rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #95C796;
  background: #fff;
}
.wrap .choise .tip{
  color: red;
  font-size: 24rpx;
  padding-left: 20px;
  line-height: 26px;
  vertical-align: middle;
}

