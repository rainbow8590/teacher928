@import "../../utils/font.wxss";

/*  导航   */
.form{
  width: 100%;
  height:100%;
  display: block;
  position: relative;
  color:#666;
}
.flex{
  display: flex;
}
.tabBar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 55px;
  border-top: 1px solid #DADADA;
  overflow: hidden;
  background: #fafafa;
  z-index: 8888;
}

.tabBar .tabItem {
  display: flex;
  width: 25%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  box-sizing: border-box;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.tabBar .tabItem1{
  width: 100%;
}

.tabBar .dot {
  position: absolute;
  right: 60rpx;
  top: 20rpx;
  background: red;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
}

.tabBar .tabItem .icons{
  display: block;
  height: 48rpx;
  font-size: 40rpx;
}

.tabBar .tabItem button {
  position: absolute;
  left: 0;
  top: 0;
  width:100%;
  height: 100%;
  background: transparent;
}
button::after {
  content:none;
}

