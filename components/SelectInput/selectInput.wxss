@import "../../utils/font.wxss";
.iconfont{
  font-size: 30rpx;
  color: #919191;
}
.flex{
  display:flex;
}
.item {
  position: relative;
  width: 100%;
  height: 134rpx;
  line-height: 134rpx;
  border-bottom: 1px solid #F0F0F0;
  font-size: 28rpx;
  padding-right: 52rpx;
  box-sizing: border-box;
}

.item label {
  padding: 0 48rpx 0 56rpx;
}

.item .inp {
  margin: auto 0;
  flex: 1;
  padding: 0 20rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 26px;
  background: rgba(223, 223, 223, .52);
  box-sizing: border-box;
  font-size: 28rpx;
}
.item text   {
  position: absolute;
  right: 70rpx;
  top: 50%;
  margin-top: -12rpx;
  z-index: 9999;
}