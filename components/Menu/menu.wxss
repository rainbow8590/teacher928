@import "../../utils/font.wxss";
.flex{
  display: flex;
}
.zoom {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .2);
  z-index: 9999;
}
.mainMenu {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  padding-left: 50%;
  box-sizing: border-box;
  z-index: 10000;
}

.mainMenu .menu {
  width: 50%;
  height: 100%;
  background: #fff;
  position: absolute;
  left: 100%;
  top: 0;
}

.mainMenu .con {
  position: relative;
}


.mainMenu .con navigator {
  color: #666;
  display: block;
  text-indent: 10px;
  font-size: 28rpx;
  padding: 25rpx 0 25rpx 68rpx;
}

.mainMenu .btn {
  background: #1FB923;
  margin: 0 10%;
  width: 80%;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 26rpx;
  display: block;
  margin-top: 110rpx;
  padding-top: 0;
}

.drawer_screen {
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
}

.userinfo {
  height: 228rpx;
  padding: 146rpx 0 0 0;
  background: #1FB923;
  margin-bottom: 60rpx;
  justify-content: center;
  align-items: center;
}

.userinfo .Avatar {
  text-align: center;
  width: 85px;
  height: 85px;
  margin-right: 34rpx;
  background: #5c7c97;
  border-radius: 50%;
  color:#fff;
  font-size:122rpx;
}

.userinfo .name {
  color: #fff;
  line-height: 24px;
  font-size: 16px;
  text-align: center
}


.animate1{
  animation: myfirst .5s;
  -webkit-animation: myfirst .5s;
  animation-delay:.3s;
  animation-fill-mode: forwards;
}
.animate2{
  animation: myfirst1 .5s;
  -webkit-animation: myfirst1 .5s;
  animation-fill-mode: forwards;
}
@keyframes myfirst{
  from {left: 100%;}
  to {left: 50%;}
}
@keyframes myfirst1{
  from {left: 50%;}
  to {left: 100%;}
}