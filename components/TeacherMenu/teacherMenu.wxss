@import "../../utils/font.wxss";
.teacherInfo {
  width: 100%;
  height: 110rpx;
  padding: 0 30rpx 0 30rpx;
  border-bottom: 1px solid #1FB923;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  color: #666;
  box-sizing: border-box;
  display: flex;
}

.teacherInfo text {
  font-size: 46rpx;
  color: #1FB923;
}
.teacherInfo .classInfo {
  font-size:30rpx;
  color: #1FB923;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.teacherInfo .classInfo1 {
  font-size:46rpx;
}

.teacherInfo .classInfo text{
  font-size:30rpx;
}

.teacherInfo image {
  width: 49rpx;
  height: 28rpx;
  padding: 10px 0 10px 15px;
}
